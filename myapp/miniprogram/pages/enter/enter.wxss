/**index.wxss**/
@import "/pages/foot/foot.wxss";
.container{
  margin-bottom:15rpx;
}
.title{
  font-size:40rpx;
  /* font-weight:bold; */
  color:#ffffff;
  /* margin-top:30rpx; */
  margin-bottom:10rpx;
  background:#d6d4d4;
  width:100%;
  height:80rpx;
  line-height: 80rpx;
  text-align:center;
  letter-spacing: 10rpx;
  box-shadow:2rpx 1rpx 3rpx #d6d4d4;
}
.section{
  border-bottom:1rpx solid #d3d2d2;
  width:660rpx;
  height:100%;
  /* line-height:10px; */
  position: relative;
  padding:15rpx;
  display:inline-block;
  margin:5rpx 30rpx;
}
label{
   font-size:28rpx;
}
.hlabel{
  display :inline-block;
  padding-right:15rpx;
  position:relative;
  /* top: -21rpx; */
  font-weight: 400;
  width:150rpx;
  height:30rpx;
  /* line-height: 18rpx; */
}
i{
  width:1rpx;
  height:35rpx;
  background:#d6d4d4;
  display: inline-block;
  position: relative;
  top:9rpx;

}
input{
  display: inline-block;
  width:450rpx;
  font-size:25rpx;
  height:100%;
  position: relative;
  top:12rpx;
  left:20rpx;
}
.placeholder {
  /* placeholder颜色  */
  color: #aab2bd;
  /* placeholder字体大小  */
  font-size: 20rpx;
  /* placeholder位置  */
  text-align: left;
}
.section_declare{
  color:#eb0d0d;
  font-size:16rpx;
}


.radio-group{
  display: inline-block;
  position: relative;
  top:0rpx;
  margin-left:20rpx;
  left:-1rpx;
  width:420rpx;

}
radio{
  transform: scale(0.8);
 
}
.radio{
  display:inline-block;
  /* float:left; */
  /* padding-left:15rpx; */
  width:210rpx;
  height:auto;

}
.btn-area{
  text-align: center;
}
button{
  margin:20rpx;
}
